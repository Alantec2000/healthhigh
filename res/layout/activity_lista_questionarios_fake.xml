<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:text="Lista de Questionários"
        android:textSize="18sp"
        android:textStyle="bold"
        style="@style/lista_header"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:id="@+id/img_questionario"
                android:src="@drawable/question_mark"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_titulo"
                android:text="Questionário sobre alimentaçao"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/img_questionario"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                app:layout_constraintHorizontal_bias="0"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Queremos saber mais sobre seus habitos alimentares!"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_titulo"
                android:id="@+id/txt_descricao"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/img_questionario"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/responder_questionario"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_descricao"
                android:text="Responder"
                />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</LinearLayout>