<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:id="@+id/profileData_wrapper">
    <ImageView
        android:layout_width="130sp"
        android:layout_height="100sp"
        android:src="@drawable/userprofile"
        android:id="@+id/userProfilePhoto"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textSize="24sp"
        android:id="@+id/userProfileName"
        android:layout_toEndOf="@id/userProfilePhoto"
        android:layout_marginTop="10sp"
        android:layout_marginStart="8sp"
        android:layout_marginBottom="8sp"
        android:layout_marginEnd="8sp"
        android:maxLines="1"
        android:ellipsize="end"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ranking"
        android:textSize="17sp"
        android:id="@+id/userProfileRanking"
        android:layout_toEndOf="@id/userProfilePhoto"
        android:layout_below="@id/userProfileName"
        android:layout_centerInParent="true"
        android:layout_marginStart="10sp"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ExperiÃªncia"
        android:textSize="17sp"
        android:id="@+id/userProfileExperience"
        android:layout_toEndOf="@id/userProfilePhoto"
        android:layout_below="@id/userProfileRanking"
        android:layout_marginStart="10sp"
        />
</RelativeLayout>