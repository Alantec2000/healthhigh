<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Questionário sobre hábitos alimentares"
            android:id="@+id/titulo_responder_questionario"
            style="@style/lista_header"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="5dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Questionário para conhecermos seus hábitos alimentares!"
            android:id="@+id/descricao_responder_questionario"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titulo_responder_questionario"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />
        <View
            android:layout_width="368dp"
            android:layout_height="2dp"
            android:background="#aaa"
            android:layout_marginTop="10dp"
            android:id="@+id/separador_header_lista_responder_questionario"
            app:layout_constraintTop_toBottomOf="@+id/descricao_responder_questionario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:paddingStart="8dp"
            tools:layout_editor_absoluteX="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/header_lista_questoes_responder_questionario"
            android:text="Questões:"
            app:layout_constraintTop_toBottomOf="@+id/separador_header_lista_responder_questionario"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="10dp"
            tools:layout_editor_absoluteX="0dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:id="@+id/lista_questoes_responder_questionario"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_lista_questoes_responder_questionario">
            <android.support.constraint.ConstraintLayout
                android:layout_marginBottom="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/descricao_questao_1"
                    android:text="Você costuma comer algum tipo de salada?"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:padding="5dp"
                    tools:layout_editor_absoluteX="8dp" />
                <View
                    android:layout_width="368dp"
                    android:layout_height="2dp"
                    android:id="@+id/separador_descricao_resposta_1"
                    android:background="#ccc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/descricao_questao_1"
                    android:layout_margin="5dp"
                    tools:layout_editor_absoluteX="8dp" />
                <RadioGroup
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/opcoes_questao_1"
                    app:layout_constraintTop_toBottomOf="@+id/separador_descricao_resposta_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteX="8dp">
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sim"
                        android:id="@+id/sim_questao_1"/>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Não"
                        android:id="@+id/nao_questao_1"/>
                </RadioGroup>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Se sim, nos diga quais tipos de salada você prefere?"
                    android:id="@+id/header_questao_fake_txt_1"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/opcoes_questao_1"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteX="0dp" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/questao_fake_resposta_qualitativa_1"
                    app:layout_constraintTop_toBottomOf="@+id/header_questao_fake_txt_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteX="0dp" />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/questao_2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/descricao_questao_2"
                    android:text="Seria interessante se o refeitório da empresa servisse uma maior diversidade de saladas no almoço?"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:padding="15dp"
                    tools:layout_editor_absoluteX="0dp" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:id="@+id/separador_descricao_resposta"
                    android:background="#ccc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/descricao_questao_2"
                    android:layout_margin="5dp"
                    tools:layout_editor_absoluteX="5dp" />
                <RadioGroup
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/opcoes_questao_2"
                    app:layout_constraintTop_toBottomOf="@+id/separador_descricao_resposta"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteX="8dp">
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sim"
                        android:id="@+id/sim_questao_2"/>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Não"
                        android:id="@+id/nao_questao_2"/>
                </RadioGroup>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Responder"
            android:id="@+id/responder_questionario_fake"
            app:layout_constraintTop_toBottomOf="@+id/lista_questoes_responder_questionario"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>