<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="l1_tittle">
        <item name="android:text">TÃ­tulo</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="ellipsend">
        <item name="android:ellipsize">end</item>
    </style>
    <style name="oneLineText" parent="ellipsend">
        <item name="android:maxLines">1</item>
    </style>
    <style name="twoLineText" parent="ellipsend">
        <item name="android:maxLines">2</item>
    </style>
    <style name="lista_header">
        <item name="android:background">#EEE</item>
    </style>
    <style name="linha_lista">
        <item name="android:clickable">true</item>
    </style>
    <style name="linha_desafio" parent="linha_lista">
        <item name="android:background">
            #eee
        </item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>